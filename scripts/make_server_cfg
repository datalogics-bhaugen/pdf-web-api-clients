#!/bin/bash

if [[ "$OSTYPE" == "linux"* ]]; then
    date_format="--rfc-3339=seconds"
fi

echo "# created by make_server_cfg (do not edit directly)"
echo
echo [build]
echo time = `date $date_format`
echo
echo [versions]
echo pdf2img = `pdf2img | grep PDF2IMG | cut -f2- -d ' '`
echo server = `git describe --tags 2> /dev/null || git describe --all`
echo
echo [limits]
echo input_size = 10000000
echo max_thumbnail_dimension = 250
echo
echo [service]
echo port = 5000
echo thumbnail_port = 5050
echo
echo [test]
echo "# thumbnail requests for this URL are exempt from rate limiting"
echo input_url = http://www.datalogics.com/pdf/PDF2IMG.pdf
